<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@android:color/black"
        android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:id="@+id/imageAttachment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/likeIvInAtt"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:contentDescription="@string/share_post"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:icon="@drawable/ic_like_selector"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white" />

        <Button
            android:id="@+id/shareIvTnAtt"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_share_24dp"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white" />

        <Button
            android:id="@+id/shareIvInAtt"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_remove_red_eye_24dp"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white" />

    </LinearLayout>


</FrameLayout>